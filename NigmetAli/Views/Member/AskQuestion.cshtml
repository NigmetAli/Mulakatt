
@{
    ViewBag.Title = "AskQuestion";
}

<div class="container">
    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-md-8 ">
            <form class="form-group" method="post" action="/Member/AskQuestion">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-question-sign"></i></span>
                    <input type="text" class="form-control" placeholder="Describe Your Question" name="Description" />
                </div>
                <div class="input-group">
                    <br />
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-tasks"></i></span>
                    <code><textarea name="CodeArea" class="form-control"></textarea></code>
                </div>
                <div class="input-group">
                    <br />
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-question-sign"></i></span>
                    <input type="text" class="form-control" placeholder="Type Tags So That The Question Can Be Reached More Quickly"  name="Tags"/>
                </div>
                <div class="input-group">
                    <br />
                </div>
                <div class="input-group">
                    <button type="submit" class="btn btn-success">Finish Question</button>
                </div>
            </form>
        </div>
    </div>
</div>

